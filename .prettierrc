{
    "tabWidth": 4,
    "useTabs": false,
    "pluginSearchDirs": ["."],
    "plugins": ["prettier-plugin-go-template", "prettier-plugin-svelte"],
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "parser": "go-template"
            }
        },
        { "files": "*.svelte", "options": { "parser": "svelte" } }
    ]
}
